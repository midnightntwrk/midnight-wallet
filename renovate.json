{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "nix": {
    "enabled": true
  },
  "extends": ["config:best-practices", "schedule:weekly", ":disableRateLimiting"],
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "rebaseWhen": "conflicted",
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "https://npm.pkg.github.com/",
      "npmrc": "@midnight-ntwrk:registry=https://npm.pkg.github.com/"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": true
    },
    {
      "groupName": "Midnight libraries and docker images",
      "matchPackageNames": [
        "@midnight-ntwrk/**",
        "ghcr.io/midnight-ntwrk/**"
      ]
    },
    {
      "groupName": "devDependencies (non-major)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"]
    },
    {
      "matchDatasources": ["sbt-package"],
      "matchPackagePrefixes": ["io.iohk"],
      "enabled": false
    },
    {
      "matchDatasources": ["sbt-package"],
      "matchPackagePrefixes": ["com.github.ghostdogpr"],
      "enabled": false
    }
  ]
}
