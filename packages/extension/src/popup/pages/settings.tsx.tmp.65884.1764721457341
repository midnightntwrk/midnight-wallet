import { useState } from 'react'
import { useNavigate } from 'react-router-dom'
import type { LucideIcon } from 'lucide-react'
import {
  Lock,
  Key,
  Link2,
  ChevronRight,
  Info,
  Loader2,
} from 'lucide-react'
import { useWalletStore } from '@/store/wallet-store'
import { useUIStore } from '@/store/ui-store'
import { lock } from '@/lib/background'
import { SettingsSection } from '@/components/settings/settings-section'
import { NetworkSelector } from '@/components/settings/network-selector'
import { AutoLockSelector } from '@/components/settings/auto-lock-selector'

interface SettingsItemProps {
  icon: LucideIcon
  label: string
  description: string
  onClick: () => void
  variant?: 'default' | 'danger'
}

function SettingsItem({ icon: Icon, label, description, onClick, variant = 'default' }: SettingsItemProps) {
  return (
    <button
      onClick={onClick}
      className="w-full flex items-center justify-between p-3 hover:bg-slate-50 rounded-xl transition-colors"
    >
      <div className="flex items-center gap-3">
        <div className={`w-10 h-10 rounded-full flex items-center justify-center ${
          variant === 'danger' ? 'bg-red-100' : 'bg-slate-100'
        }`}>
          <Icon className={`w-5 h-5 ${variant === 'danger' ? 'text-red-500' : 'text-slate-600'}`} />
        </div>
        <div className="text-left">
          <p className={`font-medium text-sm ${variant === 'danger' ? 'text-red-500' : 'text-slate-900'}`}>
            {label}
          </p>
          <p className="text-xs text-slate-500">{description}</p>
        </div>
      </div>
      <ChevronRight className="w-5 h-5 text-slate-400" />
    </button>
  )
}

export function SettingsPage() {
  const navigate = useNavigate()
  const { activeWallet, lock: lockStore } = useWalletStore()
  const { showToast } = useUIStore()

  async function handleLock() {
    try {
      await lock()
      lockStore()
      navigate('/unlock', { replace: true })
    } catch (err) {
      showToast('Failed to lock wallet', 'error')
      console.error('Failed to lock:', err)
    }
  }

  return (
    <div className="p-4 space-y-6">
      <div className="bg-slate-50 rounded-xl p-4">
        <div className="flex items-center gap-3">
          <div className="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold">
            {activeWallet?.name?.[0] || 'M'}
          </div>
          <div>
            <p className="font-semibold">{activeWallet?.name || 'Midnight Wallet'}</p>
            <p className="text-xs text-slate-500">Primary wallet</p>
          </div>
        </div>
      </div>

      <SettingsSection title="Network">
        <NetworkSelector />
      </SettingsSection>

      <SettingsSection title="Security">
        <AutoLockSelector />
        <SettingsItem
          icon={Key}
          label="Export Seed Phrase"
          description="Backup your recovery phrase"
          onClick={() => navigate('/settings/export-seed')}
        />
        <SettingsItem
          icon={Link2}
          label="Connected dApps"
          description="Manage app connections"
          onClick={() => navigate('/settings/connected-dapps')}
        />
      </SettingsSection>

      <SettingsSection title="About">
        <div className="flex items-center justify-between p-3 rounded-xl bg-slate-50">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 rounded-full bg-slate-100 flex items-center justify-center">
              <Info className="w-5 h-5 text-slate-600" />
            </div>
            <div>
              <p className="font-medium text-sm">Midnight Wallet</p>
              <p className="text-xs text-slate-500">Version 0.1.0</p>
            </div>
          </div>
        </div>
      </SettingsSection>

      <div className="pt-2">
        <button
          onClick={handleLock}
          className="w-full flex items-center justify-center gap-2 p-3 text-red-500 hover:bg-red-50 rounded-xl transition-colors"
        >
          <Lock className="w-5 h-5" />
          <span className="font-medium">Lock Wallet</span>
        </button>
      </div>
    </div>
  )
}
