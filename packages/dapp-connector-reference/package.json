{
  "name": "@midnight-ntwrk/wallet-sdk-dapp-connector-reference",
  "description": "Reference implementation of the Dapp Connector API",
  "version": "1.0.0-beta.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Midnight Foundation",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midnight-ntwrk/artifacts.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@midnight-ntwrk/dapp-connector-api": "../../../midnight-dapp-connector-api",
    "@midnight-ntwrk/wallet-sdk-facade": "workspace:*",
    "effect": "^3.19.14",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.37.0",
    "fast-check": "^4.5.0",
    "prettier": "^3.7.4",
    "publint": "~0.3.14",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  },
  "scripts": {
    "typecheck": "tsc -b ./tsconfig.json --noEmit",
    "test": "vitest run",
    "lint": "eslint --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,yaml,yml,md}\"",
    "dist": "tsc -b ./tsconfig.build.json",
    "dist:publish": "tsc -b ./tsconfig.publish.json",
    "clean": "rimraf --glob dist 'tsconfig.*.tsbuildinfo' && date +%s > .clean-timestamp",
    "publint": "publint --strict"
  }
}
