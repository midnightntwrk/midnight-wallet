{
  "extends": ["//"],
  "tasks": {
    "typecheck-script": {
      "inputs": ["scripts/**", "src/testing/**", "package.json"],
      "dependsOn": ["^dist"]
    },
    "polkadot-typegen": {
      "inputs": ["scripts/**", "src/testing/**", "package.json"],
      "outputs": ["src/gen/**"],
      "dependsOn": ["typecheck-script"]
    },
    "gen-test-tx": {
      "inputs": ["scripts/**", "src/testing/**", "package.json"],
      "outputs": ["resources/**"],
      "cache": false, // There are time constraints, etc. so the script handles caching itself
      "dependsOn": ["typecheck-script"]
    },
    "test": {
      "dependsOn": ["$TURBO_EXTENDS$", "gen-test-tx"]
    }
  }
}
