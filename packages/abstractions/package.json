{
  "name": "@midnight-ntwrk/wallet-sdk-abstractions",
  "description": "Domain-specific abstractions for the wallet SDK",
  "version": "1.0.0-beta.3",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "IOHK",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/midnight-ntwrk/artifacts.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "effect": "^3.17.3"
  },
  "scripts": {
    "typecheck": "tsc -b ./tsconfig.json --noEmit",
    "test": "vitest run",
    "lint": "eslint --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,js,json,yaml,yml}\"",
    "dist": "tsc -b ./tsconfig.build.json",
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "publint": "publint --strict"
  },
  "devDependencies": {
    "eslint": "^9.37.0",
    "fast-check": "^4.2.0",
    "publint": "~0.3.14",
    "rimraf": "^6.0.1",
    "to-words": "^4.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
