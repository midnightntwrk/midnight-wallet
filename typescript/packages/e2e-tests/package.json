{
  "name": "@midnight/wallet-e2e-tests",
  "version": "0.0.1",
  "description": "Typescript wallet tests",
  "author": "IOG",
  "private": true,
  "type": "module",
  "scripts": {
    "pretest-e2e": "rimraf ./allure-results",
    "test-e2e": "docker compose -f docker-compose-dynamic.yml pull && NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node --max-old-space-size=8192' jest --group=${NETWORK} --detectOpenHandles",
    "lint": "eslint",
    "allure-generate": "allure generate ./allure-results --clean -o ./reports/allure-report",
    "allure-history": "shx mkdir -p reports/allure-results/history && shx cp reports/allure-report/history/* reports/allure-results/history",
    "allure-open": "allure open ./reports/allure-report",
    "allure-report": "yarn allure-generate && yarn allure-history && yarn allure-open"
  },
  "devDependencies": {
    "@cardano-sdk/key-management": "0.24.8",
    "@midnight-ntwrk/midnight-js-network-id": "0.2.5",
    "@midnight-ntwrk/wallet": "workspace:*",
    "@midnight-ntwrk/wallet-api": "^5.0.0",
    "@midnight-ntwrk/wallet-api_hf": "npm:@midnight-ntwrk/wallet-api@3.4.0",
    "@midnight-ntwrk/wallet-sdk-address-format": "workspace:*",
    "@midnight-ntwrk/wallet_post_hf": "npm:@midnight-ntwrk/wallet@3.7.1-hardfork-rc.2",
    "@midnight-ntwrk/wallet_pre_hf": "npm:@midnight-ntwrk/wallet@3.6.0",
    "@midnight-ntwrk/wallet_qanet": "npm:@midnight-ntwrk/wallet@3.7.4",
    "@midnight-ntwrk/wallet_testnet": "npm:@midnight-ntwrk/wallet@3.7.4",
    "@midnight-ntwrk/zswap": "4.0.0",
    "@midnight-ntwrk/zswap_v1": "npm:@midnight-ntwrk/zswap@3.0.2",
    "@midnight-ntwrk/zswap_v2": "npm:@midnight-ntwrk/zswap@3.0.0-hard-fork-test",
    "@types/jest": "^29.2.0",
    "@types/node": "^22.11.0",
    "@types/ws": "^8.5.4",
    "allure-commandline": "^2.27.0",
    "allure-jest": "^2.14.1",
    "fp-ts": "^2.13.1",
    "jest": "^29.7.0",
    "jest-docblock": "^29.7.0",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "jest-runner": "^29.7.0",
    "jest-runner-groups": "^2.2.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "prettier": "^2.7.1",
    "rimraf": "^6.0.1",
    "rxjs": "^7.5",
    "shx": "^0.3.4",
    "testcontainers": "^10.2.1",
    "ts-jest": "^29.0.3",
    "tsc-watch": "^6.0.0",
    "typescript": "~4.8.4",
    "ws": "^8.12.0"
  }
}
