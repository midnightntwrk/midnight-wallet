{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_AUTH_TOKEN", "MIDNIGHT_GH_USER", "MIDNIGHT_GH_TOKEN"],
  "tasks": {
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts",
        "scripts/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "eslint.config.mjs",
        "$TURBO_ROOT$/eslint.config.mjs"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["^dist", "typecheck"]
    },
    "test": {
      "inputs": [
        "test/**/*.ts",
        "src/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "vitest.config.mjs"
      ],
      "env": ["DEBUG"],
      "outputLogs": "new-only",
      "dependsOn": ["typecheck", "^dist"]
    },
    "typecheck": {
      "inputs": ["test/**/*.ts", "src/**/*.ts", "scripts/**/*.ts", "tsconfig*.json", "$TURBO_ROOT$/tsconfig.base.json"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "test-undeployed": {
      "cache": false,
      "env": ["NETWORK", "DEPLOYMENT"]
    },
    "test-remote": {
      "cache": false,
      "env": ["NETWORK", "DEPLOYMENT", "SEED", "SEED2", "SEED_STABLE", "ADDRESSES", "NT_SEED", "NT_SEED2", "SYNC_CACHE"]
    },
    "dist": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "rollup.config.mjs",
        "$TURBO_ROOT$/rollup.config.mjs"
      ],
      "outputs": ["dist/**"],
      "outputLogs": "new-only",
      "dependsOn": ["clean", "typecheck", "^dist"]
    },
    "publint": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "rollup.config.mjs",
        "$TURBO_ROOT$/rollup.config.mjs"
      ],
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["dist"]
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "format": {
      "inputs": ["**/*.{ts,js,json,yaml,yml}", ".prettierrc.json", "**/.prettierignore"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "verify": {
      "dependsOn": ["typecheck", "lint", "test", "publint"]
    }
  }
}
