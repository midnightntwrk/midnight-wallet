{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_AUTH_TOKEN", "MIDNIGHT_GH_USER", "MIDNIGHT_GH_TOKEN"],
  "tasks": {
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts",
        "scripts/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "eslint.config.mjs",
        "$TURBO_ROOT$/eslint.config.mjs"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["^dist", "typecheck"]
    },
    "test": {
      "inputs": [
        "test/**/*.ts",
        "src/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "vitest.config.mjs"
      ],
      "env": [
        "DEBUG",
        "APP_INFRA_SECRET",
        "APP_INFRA_STORAGE_PASSWORD",
        "APP_INFRA_PUB_SUB_PASSWORD",
        "APP_INFRA_LEDGER_STATE_STORAGE_PASSWORD"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["typecheck", "^dist"]
    },
    "typecheck": {
      "inputs": ["test/**/*.ts", "src/**/*.ts", "scripts/**/*.ts", "tsconfig*.json", "$TURBO_ROOT$/tsconfig.base.json"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "test-undeployed": {
      "cache": false,
      "env": [
        "NETWORK",
        "APP_INFRA_SECRET",
        "APP_INFRA_STORAGE_PASSWORD",
        "APP_INFRA_PUB_SUB_PASSWORD",
        "APP_INFRA_LEDGER_STATE_STORAGE_PASSWORD"
      ]
    },
    "test-remote": {
      "cache": false,
      "env": [
        "NETWORK",
        "SEED",
        "SEED2",
        "SEED_STABLE",
        "ADDRESSES",
        "NT_SEED",
        "NT_SEED2",
        "SYNC_CACHE",
        "APP_INFRA_SECRET",
        "APP_INFRA_STORAGE_PASSWORD",
        "APP_INFRA_PUB_SUB_PASSWORD",
        "APP_INFRA_LEDGER_STATE_STORAGE_PASSWORD"
      ]
    },
    "dist": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        ".clean-timestamp"
      ],
      "outputs": ["dist/**", "tsconfig.*.tsbuildinfo"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist", "typecheck"]
    },
    "dist:publish": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.publish.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        ".clean-timestamp"
      ],
      "outputs": ["dist/**", "tsconfig.*.tsbuildinfo"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist:publish"]
    },
    "publint": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.publish.json",
        "$TURBO_ROOT$/tsconfig.base.json"
      ],
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["dist:publish"]
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "format": {
      "inputs": ["**/*.{ts,js,json,yaml,yml}", ".prettierrc.json", "**/.prettierignore"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "format:check": {
      "inputs": ["**/*.{ts,js,json,yaml,yml}", ".prettierrc.json", "**/.prettierignore"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "verify": {
      "dependsOn": ["typecheck", "format:check", "lint", "test"]
    }
  }
}
