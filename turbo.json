{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_AUTH_TOKEN", "MIDNIGHT_GH_USER", "MIDNIGHT_GH_TOKEN"],
  "tasks": {
    "lint": {
      "inputs": [
        "**/src/**/*.ts",
        "eslint.config.mjs"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["dist"]
    },
    "test": {
      "inputs": [
        "**/test/**/*.ts",
        "**/src/**/*.ts",
        "tsconfig*.json"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["dist"]
    },
    "typecheck": {
      "inputs": [
        "**/test/**/*.ts",
        "**/src/**/*.ts",
        "tsconfig*.json"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["dist"]
    },
    "test-e2e": {
      "cache": false,
      "env": ["NETWORK", "DEPLOYMENT", "SEED", "SEED2", "SEED_STABLE", "ADDRESSES", "NT_SEED", "NT_SEED2", "SYNC_CACHE"]
    },
    "dist:prebuild": {
      "inputs": [
        "packages/capabilities/src/**/*.ts",
        "packages/capabilities/tsconfig*.json",
        "packages/address-format/src/**/*.ts",
        "packages/address-format/tsconfig*.json"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "dist": {
      "inputs": [
        "**/src/**/*.ts",
        "tsconfig*.json"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": ["dist:prebuild", "^dist", "//#sbt:dist"]
    },
    "verify": {
      "dependsOn": ["//#sbt:verify", "typecheck", "lint", "test"]
    },
    "//#sbt:dist": {
      "inputs": [
        "build.sbt",
        "**/package.json",
        "**/src/**/*.scala",
        "project/**/*.scala",
        "project/build.properties",
        "project/*.sbt"
      ],
      "outputs": [
        "wallet-engine/dist/**"
      ],
      "outputLogs": "new-only"
    },
    "//#sbt:verify": {
      "inputs": [
        "build.sbt",
        "**/package.json",
        "**/src/**/*.scala",
        "project/**/*.scala",
        "project/build.properties",
        "project/*.sbt"
      ],
      "outputs": [
        "**/target/test-reports/**"
      ],
      "dependsOn": ["//#sbt:dist"]
    }
  }
}
