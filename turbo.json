{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_AUTH_TOKEN", "MIDNIGHT_GH_USER", "MIDNIGHT_GH_TOKEN"],
  "tasks": {
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "eslint.config.mjs",
        "$TURBO_ROOT$/eslint.config.mjs"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "test": {
      "inputs": [
        "test/**/*.ts",
        "src/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "jest.config.mjs"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["typecheck", "^dist"]
    },
    "typecheck": {
      "inputs": [
        "test/**/*.ts",
        "src/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "test-e2e": {
      "cache": false,
      "env": ["NETWORK", "DEPLOYMENT", "SEED", "SEED2", "SEED_STABLE", "ADDRESSES", "NT_SEED", "NT_SEED2", "SYNC_CACHE"]
    },
    "dist": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "rollup.config.mjs",
        "$TURBO_ROOT$/rollup.config.mjs"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": ["^dist"]
    },
    "@midnight-ntwrk/wallet#dist": {
      "dependsOn": ["^dist", "//#sbt:dist"]
    },
    "@midnight-ntwrk/wallet#typecheck": {
      "dependsOn": ["^dist", "//#sbt:dist"]
    },
    "verify": {
      "dependsOn": ["typecheck", "lint", "test", "//#sbt:verify"]
    },
    "//#sbt:dist": {
      "inputs": [
        "build.sbt",
        "**/package.json",
        "**/src/**/*.scala",
        "project/**/*.scala",
        "project/build.properties",
        "project/*.sbt"
      ],
      "outputs": [
        "wallet-engine/dist/**"
      ],
      "outputLogs": "new-only",
      "dependsOn": [
        "@midnight-ntwrk/wallet-sdk-address-format#dist",
        "@midnight-ntwrk/wallet-sdk-capabilities#dist"
      ]
    },
    "//#sbt:verify": {
      "inputs": [
        "build.sbt",
        "**/package.json",
        "**/src/**/*.scala",
        "project/**/*.scala",
        "project/build.properties",
        "project/*.sbt"
      ],
      "outputs": [
        "**/target/test-reports/**"
      ],
      "dependsOn": ["//#sbt:dist"]
    }
  }
}
