{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_AUTH_TOKEN", "MIDNIGHT_GH_USER", "MIDNIGHT_GH_TOKEN"],
  "tasks": {
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts",
        "scripts/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "eslint.config.mjs",
        "$TURBO_ROOT$/eslint.config.mjs"
      ],
      "outputLogs": "new-only",
      "dependsOn": ["^dist", "typecheck"]
    },
    "test": {
      "inputs": [
        "test/**/*.ts",
        "src/**/*.ts",
        "tsconfig*.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        "vitest.config.mjs"
      ],
      "outputs": ["coverage/**", "reports/**"],
      "env": ["DEBUG", "APP_INFRA_SECRET"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "typecheck": {
      "inputs": ["test/**/*.ts", "src/**/*.ts", "scripts/**/*.ts", "tsconfig*.json", "$TURBO_ROOT$/tsconfig.base.json"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "test-undeployed": {
      "cache": false,
      "env": ["NETWORK", "DEPLOYMENT", "APP_INFRA_SECRET"]
    },
    "test-remote": {
      "cache": false,
      "env": [
        "NETWORK",
        "DEPLOYMENT",
        "SEED",
        "SEED2",
        "SEED_STABLE",
        "ADDRESSES",
        "NT_SEED",
        "NT_SEED2",
        "SYNC_CACHE",
        "APP_INFRA_SECRET"
      ]
    },
    "dist": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.html",
        "src/**/*.css",
        "public/**/*",
        "tsconfig.json",
        "tsconfig.build.json",
        "vite.config.ts",
        "tailwind.config.js",
        "postcss.config.js",
        "$TURBO_ROOT$/tsconfig.base.json",
        ".clean-timestamp"
      ],
      "outputs": ["dist/**", "tsconfig.*.tsbuildinfo"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist"]
    },
    "dist:publish": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.publish.json",
        "$TURBO_ROOT$/tsconfig.base.json",
        ".clean-timestamp"
      ],
      "outputs": ["dist/**", "tsconfig.*.tsbuildinfo"],
      "outputLogs": "new-only",
      "dependsOn": ["^dist:publish"]
    },
    "publint": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        "tsconfig.publish.json",
        "$TURBO_ROOT$/tsconfig.base.json"
      ],
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["dist:publish"]
    },
    "clean": {
      "cache": false,
      "inputs": [],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "//#format:root": {
      "cache": false,
      "inputs": ["**/*.{ts,js,json,yaml,yml,md}", ".prettierrc.json", ".prettierignore"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "//#format:check:root": {
      "cache": false,
      "inputs": ["**/*.{ts,js,json,yaml,yml,md}", ".prettierrc.json", ".prettierignore"],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "format": {
      "inputs": ["**/*.{ts,js,json,yaml,yml,md}", ".prettierrc.json", "**/.prettierignore"],
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["//#format:root"]
    },
    "format:check": {
      "inputs": ["**/*.{ts,js,json,yaml,yml,md}", ".prettierrc.json", "**/.prettierignore"],
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["//#format:check:root"]
    },
    "verify:check": {
      "dependsOn": ["typecheck", "format:check", "lint"]
    },
    "verify:test": {
      "dependsOn": ["test"]
    },
    "verify": {
      "dependsOn": ["verify:check", "verify:test"]
    }
  }
}
